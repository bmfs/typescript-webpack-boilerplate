    "file-loader": "^0.11.2",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "rimraf": "2.6.1",
    "sass-loader": "6.0.6",
    "style-loader": "^0.18.2",
    "ts-loader": "2.3.4",
    "typescript": "2.4.2",
    "webpack": "3.5.5",
    "webpack-dev-server": "2.7.1"
